{
  "name": "insonice-next",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "dev": "pnpm with-env next dev --turbo",
    "build": "pnpm with-env next build",
    "start": "pnpm with-env next start",
    "format": "biome check --write",
    "with-env": "dotenv -e .env --",
    "deploy:cf": "opennextjs-cloudflare && wrangler deploy",
    "preview:cf": "opennextjs-cloudflare && wrangler dev",
    "db:generate": "pnpm with-env drizzle-kit generate",
    "db:migrate": "pnpm with-env drizzle-kit migrate",
    "db:push": "pnpm with-env drizzle-kit push",
    "db:push-cf": "pnpm with-env wrangler d1 migrations apply DATABASE --remote",
    "db:studio": "pnpm with-env drizzle-kit studio"
  },
  "dependencies": {
    "@heroui/react": "^2.6.14",
    "@heroui/theme": "^2.4.6",
    "drizzle-orm": "^0.39.3",
    "hono": "^4.7.1",
    "lucide-react": "^0.475.0",
    "next": "15.1.7",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "swr": "^2.3.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/workers-types": "^4.20250214.0",
    "@opennextjs/cloudflare": "~0.5.1",
    "@types/node": "^20.17.19",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "dotenv-cli": "^7.1.0",
    "drizzle-kit": "^0.30.4",
    "postcss": "^8.5.2",
    "tailwindcss": "^3.4.17",
    "taze": "^18.5.0",
    "typescript": "^5.7.3",
    "wrangler": "^3.109.1"
  }
}
